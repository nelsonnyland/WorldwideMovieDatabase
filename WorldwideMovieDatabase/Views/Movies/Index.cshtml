@model IEnumerable<WorldwideMovieDatabase.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<table class="table">
    <tr>
        <th>
            <form>
                <input type="button" value="Add"
                       onclick="window.location.href='@Url.Action("Create", "Movies")'"
                       class="btn btn-primary" />
            </form>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MPAARating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieLength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.MoviePoster != null)
                {
                    <a href="@Url.Action("Movie", "Movies", new { item.ID })">
                        <img src="@Html.DisplayFor(modelItem => item.MoviePoster)" height="50" />
                    </a>
                }
                else
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MPAARating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                
            </td>
        </tr>
    }
</table>