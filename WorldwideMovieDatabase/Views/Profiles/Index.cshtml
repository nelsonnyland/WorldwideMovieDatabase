@model IEnumerable<WorldwideMovieDatabase.Models.Profile>

@{
    ViewBag.Title = "Profiles";
}

<h1>Profiles</h1>

<table class="table">
    <tr>
        <th>
            <form>
                <input type="button" value="Add"
                       onclick="window.location.href='@Url.Action("Create", "Profiles")'"
                       class="btn btn-primary" />
            </form>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeathDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.ProfilePicture != null)
                {
                    <a href="@Url.Action("Profiles", "Profiles", new { item.ID })">
                        <img src="@Html.DisplayFor(modelItem => item.ProfilePicture)" height="50" />
                    </a>
                }
                else
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeathDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
        </tr>
    }

</table>
