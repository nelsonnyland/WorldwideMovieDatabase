@model WorldwideMovieDatabase.Models.ProfileMovieJobsViewModel

@{
    ViewBag.Title = Model.Profile.Name;
}
<div>
    <h1>@Model.Profile.Name</h1>
    <hr />
    <img src="@Url.Content(Model.Profile.ProfilePicture)" />
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Profile.BirthDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profile.BirthDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Profile.DeathDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profile.DeathDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Profile.Movies)
        </dt>

        @foreach (var movieJob in Model.MovieJobs)
        {
            <dd>
                @Html.DisplayFor(model => movieJob.Movie.Title)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Profile.Bio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profile.Bio)
        </dd>

        </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Profile.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
