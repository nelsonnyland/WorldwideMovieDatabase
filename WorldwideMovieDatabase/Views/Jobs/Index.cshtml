@model IEnumerable<WorldwideMovieDatabase.Models.Job>

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>

<p>
    <form>
        <input type="button" value="Add"
               onclick="window.location.href='@Url.Action("Create", "Jobs")'"
               class="btn btn-primary" />
    </form>
</p>
<table class="table">

    @foreach (var item in Model) 
    {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>